---
import { Icon } from 'astro-icon/components';

const { title } = Astro.props;
const products = [
	{
		icon: "",
		name: "producto 1"
	},
	{
		icon: "",
		name: "producto 2"
	},
	{
		icon: "",
		name: "producto 3"
	}
]

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-800  ">
			<div class="container flex justify-around max-w-[80%] m-auto">

				<img src="/public/AliExpres-logo.webp" class="h-[61px] " />

				<div class=" my-auto relative">
					<input type="search" placeholder="buscar..." class="h-9 rounded-full pl-5 outline-none pr-96 ">
					<div class="bg-zinc-800 inline-block right-1 top-1 text-white rounded-xl px-2 absolute">
						<Icon name="mdi:search" class = "size-7" />
					</div>
				</div>

				<div class="text-white flex items-center justify-around container">
					<div class=" flex">
						<Icon name="mdi:qrcode" class = "size-8"  /> 
						<div class="ml-2">
							<div class="relative leading-3 ">Descarga la app </div>
							<div>de aliexpress</div>
						</div>
						
					</div>
					<div class="flex">
						<Icon name="flagpack:co" />
						<div class="ml-2">
							<div class="relative leading-3">es/</div>
							<div>COP</div>
							
						</div>
					</div>
					<div>
						bienvenido
					</div>
					<div>
						cesta
					</div>
				</div>
			</div>
		</div>
		<div class="container banner">
			banner
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="/productos">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) => <div>
											<img src="data:image/png;base64,"/>
											{product.name}
										</div>)
			}
			
		</div>
		<div class="container categories">
			categorias
		</div>


		<div class="container">
			<slot />
		</div>
		
		<div class="container footer">
			Este es el footer
		</div>

	</body>
</html>
<style is:global>
	
	

	.main_menu a:hover{
		background: #ff5a39;
	}
	
	.product_list{
		display: flex;
		height: 80px;
		
	}

	.product_list div {
		height: 100%;
		display: flex;
		text-align: center;
		max-width: 120px;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid rgb(194, 194, 194);
		border-radius: 4px;
		margin-right: 3px;
	}




	.categories{
		height: 80px;
	}
	.footer{
		height: 120px;
	}
	
	html, body{
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
