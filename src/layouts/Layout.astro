---
const { title } = Astro.props;
const products = [
	{
		icon: "",
		name: "producto 1"
	},
	{
		icon: "",
		name: "producto 2"
	},
	{
		icon: "",
		name: "producto 3"
	}
]

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<div class="container header_info">
				contenido de la cabecera
			</div>
		</div>
		<div class="container banner">
			banner
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="/productos">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) => <div>
											<img src="data:image/png;base64,"/>
											{product.name}
										</div>)
			}
			
		</div>
		<div class="container categories">
			categorias
		</div>


		<div class="container">
			<slot />
		</div>
		
		<div class="container footer">
			Este es el footer
		</div>

	</body>
</html>
<style is:global>
	.main_menu{
		display: flex;
		background-color: #EE4D2D;
		height: 40px;
		align-items: center;

		
	}
	.main_menu a{
		height: 100%;
		display: flex;
		align-items: center;
		text-decoration: none;
		color: #fff;
		padding: 0 12px;
		transition: background 300ms ease-in-out;
	}

	.main_menu a:hover{
		background: #ff5a39;
	}
	.header{
		background: #EE4D2D;
	}
	.header_info{
		height: 80px;
	}
	.banner{
		height: 240px;
	}
	.product_list{
		display: flex;
		height: 80px;
		
	}

	.product_list div {
		height: 100%;
		display: flex;
		text-align: center;
		max-width: 120px;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid rgb(194, 194, 194);
		border-radius: 4px;
		margin-right: 3px;
	}




	.categories{
		height: 80px;
	}
	.footer{
		height: 120px;
	}
	.container{
		max-width: 1280px;
		/* background:blue; */
		margin: 0 auto;
	}
	html, body{
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
